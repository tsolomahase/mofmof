<p id="notice"><%= notice %></p>

<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        Properties
      </div>
      <div class="card-body">


<table>
  <thead>
    <tr>
      <th>Property</th>
      <th>Rent</th>
      <th>Address</th>
      <th>Building age</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.property %></td>
        <td><%= property.rent %></td>
        <td><%= property.address %></td>
        <td><%= property.building_age %></td>
        <td><%= property.remarks %></td>
        <td><%= link_to 'Show', property , class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_property_path(property) , class: "btn btn-primary"  %></td> 
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn "%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="actions">
  <%= link_to 'New Property', new_property_path , class: "btn btn-primary"  %>
</div>

  </div>
    </div>
      </div>
        </div>
